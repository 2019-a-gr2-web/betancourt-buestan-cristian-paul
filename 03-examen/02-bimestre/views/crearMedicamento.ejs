<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <title>
        Crear medicamento
    </title>

    <style>
        .row {
            margin-top: 50px;
            margin-bottom: 50px;
        }

        #encabezado {
            margin-top: 50px;
            margin-bottom: 50px;
            text-align: center;
            color: #24AD46;
            font-size: 30px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row" id="encabezado">
        CREAR MEDICAMENTO
    </div>
    <div class="row">
        <div>
            <% if (actualizar ){ %>
                <form action="/medicamento/actualizarEjecutar" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="nombreID">Nombre</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="nombreID" name="nombre" type="text"
                                   value="<%= medicamento.nombre.toString() %>">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="composicionID">Composición</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="composicionID" name="composicion" type="text"
                                   value="<%= medicamento.composicion.toString() %>">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="gramosID">Gramos a Ingerir</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="gramosID" name="gramosAIngerir" type="number" min="0"
                                   value="<%= medicamento.gramosAIngerir.toString() %>">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="usoID">Usado para</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="usoID" name="usadoPara" type="text"
                                   value="<%= medicamento.usadoPara.toString() %>">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="fechaID">Fecha de Caducidad</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="fechaID" name="fechaCaducidad" type="date"
                                   value="<%= medicamento.fechaCaducidad.toString() %>">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="pastillasID">Numero de Pastillas</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="pastillasID" name="numeroPastillas" type="number" min="0"
                                   value="<%= medicamento.numeroPastillas.toString() %>">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="precioID">Precio</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="precioID" name="precio" type="number" min="0.01" step="0.01"
                                   value="<%= medicamento.precio %>">
                        </div>
                        <input type="number" name="idPaciente" value="<%= idPaciente %>" hidden>
                        <input type="number" name="id" value="<%= medicamento.id %>" hidden>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-success">Insertar</button>
                    </div>
                </form>
            <% }else{ %>
                <form action="/medicamento/insertar" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="nombreID">Nombre</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="nombreID" name="nombre" type="text">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="composicionID">Composición</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="composicionID" name="composicion" type="text">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="gramosID">Gramos a Ingerir</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="gramosID" name="gramosAIngerir" type="number" min="0">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="usoID">Usado para</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="usoID" name="usadoPara" type="text">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="fechaID">Fecha de Caducidad</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="fechaID" name="fechaCaducidad" type="date">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="pastillasID">Numero de Pastillas</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="pastillasID" name="numeroPastillas" type="number" min="0">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="precioID">Precio</label>
                        </div>
                        <div class="form-group col-md-8">
                            <input class="form-control" id="precioID" name="precio" type="number" min="0.01"
                                   step="0.01">
                        </div>
                        <input type="number" name="idPaciente" value="<%= idPaciente %>" hidden>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-success">Insertar</button>
                    </div>
                </form>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>
