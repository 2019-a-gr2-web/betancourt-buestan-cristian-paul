<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>

        #principal {
            margin: 50px 150px 50px 250px;
            text-align: left;
        }

        #titulo_compras {
            color: #D36F14;
            margin: 45px 30px 20px 30px;
            text-align: center;
        }

        #botones {
            margin-top: 20px;
            text-align: right;
        }

        #btn_insertar {
            color: #FFFFFF;
        }

        input {
            width: 100%;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="col-lg-12">
        <nav id="menu" class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/shoes/clientes">Clientes</a>
            <a class="navbar-brand" href="/shoes/compras">Compras</a>
            <a class="navbar-brand" href="/shoes/zapatos">Zapatos</a>
        </nav>
    </div>
    <div class="row">
        <div id="titulo_compras" class="col-lg-12"><h1>Registro compras</h1></div>
    </div>
    <form action="/shoes/clientes/crear" method="post">
        codigoZap: string
        codigoCli: number
        fecha: Date
        cantidad: number
        total: boolean
        validez: boolean
        <div id="principal" class="row justify-content-md-center">
            <div class="col-lg-4">
                <label for="zapatoID">Zapato</label>
            </div>
            <div class="col-lg-8">
                <select id="zapatoID" class="form-control" name="codigoZap" type="text">
                    <option>
                        1
                    </option>
                </select>
            </div>
            <div class="col-lg-4">
                <label for="clienteID">Cliente</label>
            </div>
            <div class="col-lg-8">
                <select id="clienteID" class="form-control" name="codigoCli" type="text" required>
                    <option>
                        1
                    </option>
                </select>
            </div>
            <div class="col-lg-4">
                <label for="fechaID">Fecha</label>
            </div>
            <div class="col-lg-8">
                <input id="cantidadID" class="form-control" name="fecha" type="date" required>
            </div>
            <div class="col-lg-4">
                <label for="cantidadID">Cantidad</label>
            </div>
            <div class="col-lg-8">
                <input id="fechaID" class="form-control" name="fecha" type="date" required>
            </div>

            <div id="botones" class="col-lg-12">
                <button id="btn_insertar" type="submit" class="btn btn-warning">Insertar</button>
                <a href="/shoes/clientes">
                    <button type="button" class="btn btn-danger">Cancelar</button>
                </a>
            </div>
        </div>
    </form>
</div>
</body>
</html>