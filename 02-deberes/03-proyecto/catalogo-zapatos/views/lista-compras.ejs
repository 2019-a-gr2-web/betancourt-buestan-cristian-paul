<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        #titulo_compras {
            color: #D36F14;
            margin: 45px 30px 20px 30px;
            text-align: center;
        }

        #btn_agregar {
            text-align: right;
            margin: 20px 30px 45px 30px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="col-lg-12">
        <nav id="menu" class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/shoes/clientes">Clientes</a>
            <a class="navbar-brand" href="/shoes/compras">Compras</a>
            <a class="navbar-brand" href="/shoes/zapatos">Zapatos</a>
        </nav>
    </div>
    <div class="row">
        <div id="titulo_compras" class="col-lg-12"><h1>Compras</h1></div>
    </div>
    <div class="row">
        <div id="btn_agregar" class="col">
            <a href="/shoes/compras/crear">
                <button type="button" class="btn btn-success">Agregar</button>
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
            <tr>
                <th></th>
                <th>CÃ³digo</th>
                <th>Fecha</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th>Validez</th>
            </tr>
            </thead>
            <% arregloCompras.forEach(compra=> { %>

                <tbody>
                <tr>
                    <td>
                        <form action="/shoes/compras/invalidar" method="post">
                            <input type="text" id="compraID" name="codigoCom" value="<%= compra.codigoCom %>"
                                   hidden>
                            <% if (compra.validez){ %>
                                <input type="image" src="/images/cancelar.png" align="center" width="30" height="30"
                                       alt="Submit Form">
                            <% } %>
                        </form>
                    </td>
                    <td><%= compra.codigoCom %></td>
                    <td><%= compra.fecha %></td>
                    <td><%= compra.cantidad %></td>
                    <td><%= compra.total %></td>
                    <% if(compra.validez){ %>
                        <td>VALIDA</td>
                    <% }else{ %>
                        <td>NO VALIDA</td>
                    <% } %>
                </tr>
                </tbody>
            <% }) %>
        </table>
    </div>
</div>
</body>
</html>