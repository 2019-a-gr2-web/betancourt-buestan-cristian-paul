<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        #titulo_clientes {
            color: #245FAD;
            margin: 45px 30px 20px 30px;
            text-align: center;
        }

        #btn_agregar {
            text-align: right;
            margin: 20px 30px 45px 30px;
        }

        img {
            text-align: center;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="col-lg-12">
        <nav id="menu" class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/shoes/clientes">Clientes</a>
            <a class="navbar-brand" href="/shoes/compras">Compras</a>
            <a class="navbar-brand" href="/shoes/zapatos">Zapatos</a>
        </nav>
    </div>
    <div class="row">
        <div id="titulo_clientes" class="col-lg-12"><h1>Clientes</h1></div>
    </div>
    <div class="row">
        <div id="btn_agregar" class="col">
            <a href="/shoes/clientes/crear">
                <button type="button" class="btn btn-success">Agregar</button>
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Código</th>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Apellido</th>
            </tr>
            </thead>
            <tbody>
            <% arregloClientes.forEach( cliente=> { %>
                <tr>
                    <td>
                        <a href="/shoes/clientes/actualizar/<%= cliente.codigoCli %>">
                            <input type="image" src="/images/editar.png" align="center" width="30" height="30"
                                   alt="Submit Form">
                        </a>
                    </td>
                    <td>
                        <form action="/shoes/clientes/actualizar" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="text" id="clienteID" name="codigoCli" value="<%= cliente.codigoCli %>" hidden>
                            <input type="image" src="/images/borrar.png" align="center" width="30" height="30"
                                   alt="Submit Form">
                        </form>
                    </td>
                    <td><%= cliente.codigoCli %></td>
                    <td><%= cliente.nombre %></td>
                    <td><%= cliente.apellido %></td>
                    <td><%= cliente.cedula %></td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>

</body>
</html>